{
    "extends": "./tsconfig.json",
    "exclude":[
        "**/__test__",
        "test",
        "node_modules",
        "es6",
        "commonjs",
        "coverage",
        ".vscode",
        ".jest-cache"
    ],
    "compilerOptions": {
        "noEmit": false,
        "module": "ES2020",
        "outDir": "es6",
        "importHelpers": true,
        "removeComments": true,
        "declaration": true,
        "declarationDir": "./types",
        "declarationMap": true 
    }
}